<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TramiteCambioEspecialidad" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <Spinner
                android:id="@+id/spinner_carreras_cambio_especialidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" />
            
            <EditText
                android:id="@+id/textObservaciones"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_carreras_cambio_especialidad"
                android:layout_weight="3"
                android:ems="10"
                android:hint="@string/observaciones" />

            <Button
                android:id="@+id/buttonEnviar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textObservaciones"
                android:layout_weight="1"
                android:text="@string/enviarSolicitud" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>