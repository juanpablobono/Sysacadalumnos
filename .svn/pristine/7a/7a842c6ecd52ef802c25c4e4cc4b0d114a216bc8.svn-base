<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TramiteCambioEspecialidad" >
	
    <ScrollView
               android:id="@+id/scrollView1"
               android:layout_width="fill_parent"
               android:layout_height="fill_parent"
               android:layout_alignParentTop="true" >
               
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
            
            <EditText
                android:id="@+id/textNombre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:ems="10"
                android:hint="@string/nombre" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/textApellido"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/textNombre"
                android:ems="10"
                android:imeOptions="actionNext"
                android:hint="@string/apellido"
                android:inputType="text" />
            
            <EditText
                android:id="@+id/textDni"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/textApellido"
                android:ems="10"
                android:imeOptions="actionNext"
                android:hint="@string/dni"
                android:inputType="number" />

            <EditText
                android:id="@+id/textLegajo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
				android:layout_below="@+id/textDni"
                android:ems="10"
                android:imeOptions="actionNext"
                android:hint="@string/legajo"
                android:inputType="number" />

            <EditText
                android:id="@+id/textEspecialidad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/textLegajo"
                android:ems="10"
                android:imeOptions="actionNext"
                android:hint="@string/especialidad" />

            <EditText
                android:id="@+id/textPlan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/textEspecialidad"
                android:ems="10"
                android:imeOptions="actionNext"
                android:hint="@string/plan"
                android:inputType="number" />

            <EditText
                android:id="@+id/textAsignaturas"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/textPlan"
                android:inputType="number"
                android:ems="10"
                android:imeOptions="actionNext"
                android:hint="@string/telefono" />

            <EditText
                android:id="@+id/textEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/textAsignaturas"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:imeOptions="actionNext"
                android:hint="@string/email" />

            <EditText
                android:id="@+id/textObservaciones"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_below="@+id/textEmail"
                android:ems="10"
                android:hint="@string/observaciones" />

            <Button
                android:id="@+id/buttonEnviar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/textObservaciones"
                android:text="@string/enviarSolicitud" />
            </RelativeLayout>
            </ScrollView>

</RelativeLayout>