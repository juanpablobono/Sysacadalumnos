	@Override
	protected void onCreate(Bundle savedInstanceState) {		
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_main);
		
		inicializar();
				
		lista.setOnItemClickListener(new OnItemClickListener() {
			
			public void onItemClick(AdapterView<?> adapter, View view, int position, long id){
				
				Intent in = null;
				
				switch(position){
				case 0:
					if(!isUsuarioLogeado()) {
						in = new Intent(MainActivity.this, Login.class);
						in.putExtra(Nombres.SIGUIENTE, ID_NOTAS_PARCIALES);	
					}
					else {
						in = new Intent(MainActivity.this, NotasParciales.class);
					}
					startActivity(in);
					break;
				case 1:
					in = new Intent(MainActivity.this, Notificaciones.class);
					startActivity(in);
					break;
				case 2:
					in = new Intent(MainActivity.this, Calendario.class);
					startActivity(in);
				break;
				case 3:
					if(!isUsuarioLogeado()) {
						in = new Intent(MainActivity.this, Login.class);
						in.putExtra(Nombres.SIGUIENTE, ID_CONSULTAS);	
					}
					else {
						in = new Intent(MainActivity.this, Consultas.class);
					}
					startActivity(in);
				break;
				case 4:
					in = new Intent(MainActivity.this, InformacionExtra.class);
					startActivity(in);
					break;
				case 5:
					in = new Intent(MainActivity.this, DatosPersonales.class);
					in.putExtra(Nombres.ACTUALIZAR, false);
					startActivity(in);
					break;
				case 6:
					in = new Intent(MainActivity.this, Configuracion.class);
					startActivity(in);
					break;
				case 7:
					if(alumno.getPassword() != null) {
						alumno.setPassword(null);
						getSupportActionBar().setSubtitle("");
						Toast.makeText(MainActivity.this, "La sesion se cerro correctamente", Toast.LENGTH_SHORT).show();
					} else {
						Toast.makeText(MainActivity.this, "No hay sesion abierta", Toast.LENGTH_SHORT).show();
					}
					break;
				default:
					break;
				}			
								
			}
		});
	}
	
	@Override
	protected void onResume() {
		super.onResume();
		
		if(isUsuarioLogeado()){
			getSupportActionBar().setSubtitle("Sesion iniciada: " + alumno.getLegajo());
		}else{
			getSupportActionBar().setSubtitle("");
		}
		
	}

	private void inicializar() {
		getSupportActionBar().setBackgroundDrawable(new ColorDrawable(Color.parseColor(Nombres.COLOR_ACTIONBAR))); 
		
		
		if (Alumno.getInstance() == null) {
			Alumno.setInstance(getPreferences(Context.MODE_PRIVATE));
		}
		
		alumno = Alumno.getInstance();
		lista = (ListView) findViewById(R.id.listView_main);
		
		Adaptador adapter = new Adaptador(getApplicationContext(), opciones, descripciones);
		//ArrayAdapter<String> adapter = new ArrayAdapter<String>(getApplicationContext(), R.layout.layout_listas, opciones);
		
		lista.setAdapter(adapter);
		
	}
	
	private boolean isUsuarioLogeado() {
		return alumno.getPassword() != null;
	}
	
	
