<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TramitePaseFacultad" >
	
    <ScrollView
               android:id="@+id/scrollView1"
               android:layout_width="fill_parent"
               android:layout_height="fill_parent"
               android:layout_alignParentTop="true" >
               
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
            
            <EditText
                android:id="@+id/textNombre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:imeOptions="actionNext"
                android:ems="10"
                android:hint="@string/nombre" >

                <requestFocus />
            </EditText>
            
            <EditText
                android:id="@+id/textApellido"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
				android:layout_below="@+id/textNombre"
                android:ems="10"
                android:imeOptions="actionNext"
                android:hint="@string/apellido" >
            </EditText>

            <EditText
                android:id="@+id/textDni"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/textNombre"
                android:ems="10"
                android:imeOptions="actionNext"
                android:hint="@string/dni"
                android:inputType="number" />

            <EditText
                android:id="@+id/textLegajo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/textDni"
                android:ems="10"
                android:imeOptions="actionNext"
                android:hint="@string/legajo"
                android:inputType="number" />

            <EditText
                android:id="@+id/textEspecialidad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/textLegajo"
                android:ems="10"
                android:imeOptions="actionNext"
                android:hint="@string/especialidad" />


            <EditText
                android:id="@+id/textTelefono"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/textEspecialidad"
                android:ems="10"
                android:hint="@string/telefono" />

            <EditText
                android:id="@+id/textFacultadDestino"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/textTelefono"
                android:ems="10"
                android:imeOptions="actionNext"
                android:hint="@string/facultadDestino" />

            <EditText
                android:id="@+id/textEspecialidadDestino"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/textFacultadDestino"
                android:ems="10"
                android:imeOptions="actionNext"
                android:hint="@string/especialidadDestino" />

            <EditText
                android:id="@+id/textRazones"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_below="@+id/textEspecialidadDestino"
                android:ems="10"
                android:hint="@string/razonesPase" />

            <Button
                android:id="@+id/buttonEnviar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/textRazones"
                android:text="@string/enviarSolicitud" />
            
            </RelativeLayout>
            </ScrollView>


</RelativeLayout>